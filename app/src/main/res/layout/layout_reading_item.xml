<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_bg_imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/reading_item_bg1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_audio_imageView"
        android:background="@drawable/audio1"
        android:baselineAlignBottom="false"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="40dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/item_bg_imageView"
        android:layout_alignEnd="@+id/item_bg_imageView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s play"
        android:id="@+id/item_title_textView"
        android:textSize="24dp"
        android:textColor="#ff000000"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_alignLeft="@+id/item_bg_imageView"
        android:layout_marginLeft="30dp"
        android:layout_toLeftOf="@+id/item_audio_imageView"
        android:layout_marginRight="10dp"/>

</RelativeLayout>
