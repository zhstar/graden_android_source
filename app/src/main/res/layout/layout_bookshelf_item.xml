<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:gravity="center_horizontal|bottom"
              android:focusable="false"
              android:paddingTop="@dimen/bookshelf_item_padding_top"
              android:paddingBottom="@dimen/bookshelf_item_padding_bottom">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三年级上册"
        android:id="@+id/bookshelf_item_title_textView"
        android:layout_gravity="center_horizontal"
        android:textSize="16dp"
        android:textColor="@android:color/white"/>

    <ImageView
        android:layout_width="@dimen/bookshelf_item_width"
        android:layout_height="@dimen/bookshelf_item_height"
        android:id="@+id/bookshelf_item_thumbnail_imageView"
        android:focusable="false"
        android:adjustViewBounds="false"
        android:scaleType="fitXY"
        android:src="@drawable/loading_background"/>

</LinearLayout>
